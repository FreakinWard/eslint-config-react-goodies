    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.1"
  },
  "peerDependencies": {
    "eslint": ">= 7",
    "eslint-config-prettier": ">= 8",
    "eslint-plugin-import": ">= 2",
    "eslint-plugin-jest": ">= 24",
